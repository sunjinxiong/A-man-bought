<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/jianbian"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/xq_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/jiantouer"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <uk.co.senab.photoview.PhotoView
            android:id="@+id/xq_ima"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

            <TextView
                android:id="@+id/xq_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/xq_yogj"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

             <TextView
                 android:id="@+id/xq_price"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_marginLeft="15dp"
                 android:textColor="#FF7F46"
                 android:textSize="23dp"
                 />
                <TextView
                    android:id="@+id/xq_yuanjai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="23dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="销量：0件"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:layout_marginLeft="30dp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:text="送至"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全国"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:background="#FF5D01"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="有货免运费"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FAFAFA"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="#FF5D01"
                    android:text="好频率：100%"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0人评价"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:background="#FF5D01"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="500dp"
                android:layout_height="10dp"
                android:background="#FAFAFA"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/xq_shop"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="商品介绍"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                />
            <TextView
            android:layout_width="500dp"
            android:layout_height="10dp"
            android:background="#FAFAFA"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#FAFAFA"
            >
            <TextView
                android:layout_width="5dp"
                android:layout_height="35dp"
                android:background="#FF5D01"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="店铺推荐"
                />
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/xq_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            >
        <ImageView
            android:id="@+id/xq_dainpu"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/dainpu"
            />
        <ImageView
            android:id="@+id/xq_kefu"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/kefu"
            />
            <ImageView
                android:id="@+id/xq_shoucang"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/shouchang"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/xq_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="加入购物车"
            android:background="#FF8A00"
            />

        <Button
            android:id="@+id/xq_mai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FF5D01"
            android:text="立即购买"
            />

    </LinearLayout>

</RelativeLayout>
