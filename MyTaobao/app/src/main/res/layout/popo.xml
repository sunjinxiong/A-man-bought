<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/popo_ima"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/popo_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ad"
            android:layout_marginTop="20dp"
            android:textColor="#FF5D01"
            android:textSize="16sp"
          android:layout_weight="1"
            />

        <TextView
            android:id="@+id/popo_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="ad"
            android:layout_weight="1"
            />

    </LinearLayout>

        <TextView
            android:id="@+id/popo_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="X"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"/>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E9E9E9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"

        >
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:text="购买数量"
         android:layout_marginTop="23dp"
         android:layout_marginLeft="20dp"
         />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/popo_jian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/popo_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/popo_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E9E9E9"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/popo_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确定"
        android:background="@drawable/jianbian"
        android:layout_marginTop="20dp"
        />

</LinearLayout>